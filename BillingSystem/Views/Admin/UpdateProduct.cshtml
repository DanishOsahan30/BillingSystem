@model  BillingSystem.Models.Products.Product

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="UpdateProduct" method="post">
            <h2 class="text-center">Update Product</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="ID" hidden/>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control bg-dark text-white" autocomplete="on" aria-required="true" placeholder="UserName" />
                <label class="text-white"  asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Price" class="form-control bg-dark text-white" autocomplete="on" aria-required="true" placeholder="₨100" />
                <label class="text-white" asp-for="Price"></label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Description" class="form-control bg-dark text-white" aria-required="true" placeholder="Description" />
                <label class="text-white" asp-for="Description"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group  mb-3 ">

                <select asp-for="Category" class="form-control bg-dark text-white">
                    <option value="">Select Category</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Value">@category.Text</option>
                    }
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 ">

                <select asp-for="SubCategory" class="form-control bg-dark text-white">
                    <option value="">Select SubCategory</option>
                    @foreach (var subCategory in ViewBag.SubCategories)
                    {
                        <option value="@subCategory.Value">@subCategory.Text</option>
                    }
                </select>
                <span asp-validation-for="SubCategory" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Update</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}