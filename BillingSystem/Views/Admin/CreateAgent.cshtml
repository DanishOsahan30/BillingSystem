@model BillingSystem.Models.Authentication.RegisterUser

<div class="row justify-content-center">
    <div class="col-md-4">
        <form id="registerForm" method="post">
            <h2 class="text-center">Add Agent</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control bg-dark text-white"  autocomplete="on" aria-required="true" placeholder="UserName" />
                <label class="text-white" asp-for="Name"></label>
                <span asp-validation-for="Name"  class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control bg-dark text-white" autocomplete="on" aria-required="true" placeholder="name@example.com" />
                <label class="text-white" asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control bg-dark text-white" type="password" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label class="text-white" asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" class="form-control bg-dark text-white" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label class="text-white" asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="PhoneNumber" class="form-control bg-dark text-white" aria-required="true" placeholder="Phone Number" />
                <label class="text-white" asp-for="PhoneNumber"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <select asp-for="Role" class="form-select bg-dark text-white" aria-required="true">
                    <option value="">Select Role</option>
                    <option value="Agent">Agent</option>
                    <option value="Customer">Customer</option>
                </select>
               
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}