@model BillingSystem.Models.Products.SubCategory

    <button type="button" class="btn btn-primary w-25 rounded-end" onclick="addSubCategory()">
    <i class="bi bi-plus-circle-dotted"></i>&nbsp;Add SubCategory
    </button>
<!-- Modal -->
<div class="modal fade" id="addSubCategoryModal" tabindex="-1" role="dialog" aria-labelledby="addSubCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addSubCategoryModalLabel">Add SubCategory</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body ">
                <form asp-action="AddSubCategory" method="post">
                    <div class="form-group">
                        <label asp-for="Name" class="mb-2"></label>
                        <input type="text" asp-for="Name" class="form-control" required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="w-100 text-center">
                        <button type="submit" class="btn btn-primary mt-3 w-50 ">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function addSubCategory() {
        $('#addSubCategoryModal').modal('show');
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}